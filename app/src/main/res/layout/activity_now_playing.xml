<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".NowPlayingActivity">

    <!-- Background for album art -->
    <View
        android:id="@+id/album_art_background"
        android:layout_width="0dp"
        android:layout_height="310dp"
        android:background="@color/album_art_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spacer below album art -->
    <View
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/app_background"
        app:layout_constraintTop_toBottomOf="@id/album_art_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_button"
            app:tint="@color/icon_color_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now_playing"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="@string/menu_button"
            app:tint="@color/icon_color_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Album art container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAlbumArtContainer"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="110dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/seek_bar_background"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/ivAlbumArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/album_art_placeholder" />
    </androidx.cardview.widget.CardView>

    <!-- Song title -->
    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/default_song_title"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cvAlbumArtContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Artist name -->
    <TextView
        android:id="@+id/tvArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/default_artist_name"
        android:textColor="@color/text_artist"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvSongTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Seek bar layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/seekBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvArtistName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/seekBarBackground"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/rounded_seekbar_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/seekBarProgress"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/rounded_seekbar_progress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Thumb -->
        <View
            android:id="@+id/seekThumb"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/seek_thumb"
            app:layout_constraintTop_toTopOf="@id/seekBarBackground"
            app:layout_constraintBottom_toBottomOf="@id/seekBarBackground"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Hitbox (vùng chạm) -->
        <Button
            android:id="@+id/seekThumbHitbox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/seekThumb"
            app:layout_constraintBottom_toBottomOf="@id/seekThumb"
            app:layout_constraintStart_toStartOf="@id/seekThumb"
            app:layout_constraintEnd_toEndOf="@id/seekThumb" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- Current and total time -->
    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0:00"
        android:textColor="@color/text_time"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/seekBarLayout"
        app:layout_constraintStart_toStartOf="@id/seekBarLayout" />

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0:00"
        android:textColor="@color/text_time"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/seekBarLayout"
        app:layout_constraintEnd_toEndOf="@id/seekBarLayout" />

    <!-- Controls layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnShuffle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_shuffle"
            android:contentDescription="@string/shuffle_button"
            app:tint="@color/icon_color_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/btnPrevious"
            android:layout_marginEnd="30dp"/>

        <ImageView
            android:id="@+id/btnPrevious"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_skip_previous"
            android:contentDescription="@string/previous_button"
            app:tint="@color/icon_color_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnShuffle"
            app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
            android:layout_marginEnd="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnPlayPause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/seek_bar_progress"
            app:cardCornerRadius="35dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPrevious"
            app:layout_constraintEnd_toStartOf="@id/btnNext">

            <ImageView
                android:id="@+id/ivPlayPauseIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play"
                android:contentDescription="@string/play_pause_button"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_skip_next"
            android:contentDescription="@string/next_button"
            app:tint="@color/icon_color_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPlayPause"
            app:layout_constraintEnd_toStartOf="@id/btnRepeat"
            android:layout_marginStart="20dp" />

        <ImageView
            android:id="@+id/btnRepeat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_repeat"
            android:contentDescription="@string/repeat_button"
            app:tint="@color/icon_color_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintHorizontal_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>